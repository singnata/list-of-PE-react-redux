// Import all partials
@require './_*.styl'


ul
  list-style none
  margin 0
  padding 0

button, input[type=submit], li a, a
  text-transform uppercase
  background none
  border 1px solid black
  font-size 1.5rem
  transition all 0.2s
  position relative
  &[disabled]
    opacity 0.4
    &:hover
      cursor not-allowed

  &:after
    content ''
    z-index -1
    display block
    background black
    position absolute
    width 100%
    height 0
    left 0
    top 0
    transition all 0.2s
  &:hover, &:focus
    color white
    outline 0
    &:after
      height 100%
  // variants
  &.warning
    &:after
      background red
  &.success
    &:after
      background green

.form-group input
  color rgb(0, 0, 153)

input
  font-size 1.2rem
  text-transform uppercase
  padding 10px 15px
  border-radius 5px
  border 1px
  margin-right 50px
  height 40px
  width 250px
  color rgb(0, 0, 153) !important
  background-color rgb(204, 204, 204)
  &:focus
    border 2px solid rgb(0, 0, 102)
    outline none
    background-color rgb(242, 242, 242)


#main
  background-color #D4D4D4

.mat-focused
  color red!important

.form-group
  margin-top 25px
  position relative

.edit, .list, .details, .notfound, .new
  text-align center
  padding 30px 100px
  color rgb(0, 0, 153)

input:-webkit-autofill, textarea:-webkit-autofill, select:-webkit-autofill 
    background #d4d4d4 !important
    
button, li a, a
  margin-top: 50px
  padding: 10px 30px
  border-radius: 5px
  color rgb(0, 0, 153)
  border 2px solid rgb(0, 0, 102)
  position relative
  &:hover 
    color rgb(255, 255, 255)
    background-color rgb(0, 0, 102)

.form-button 
  text-align center
  padding 5px 150px

.button-update 
  margin 50px auto
  display block

a
  text-decoration none

.details-item
  margin-top 20px
  &:last-child
    margin-bottom 50px

.details-title 
  margin-top 70px
  margin-bottom 30px 

.details a, .list a
  display inline-block
  margin-top 50px

.list li
  margin-top 15px
  a, button
    margin-left 20px

.error-message, .error-required
  font-size 10px
  color #800000
  position absolute
  width 170px
  height 20px
  top 14px
  right -110px

.required input, .error-input
  border 1px solid red

.error-input
  &:focus
    border 2px solid red

.required input
  &:focus
    border 2px solid red

.required span.error-required
  display inline-block

.error-required
  display none

.isrequired
  font-size 10px
  position absolute
  width 10px
  height 10px
  top 4px
  right 37px

.invisible
  display none

.visisble
  display block

.success-message 
  width: 400px
  padding: 50px 30px
  background: #fff
  border-radius: 10px
  box-shadow 0 20px 75px rgba(0, 0, 0, 0.13)
  color #666
  margin 0 auto
  transform translate(-50%, -50%)
  position fixed
  top 50%
  left 50%
  animation opacity-fadeIn 0.5s 0.2s forwards;

.opacity 
  filter blur(20px) grayscale(20%)

@-o-keyframes opacity-fadeIn 
  from 
    opacity 0
  
  to 
    opacity 1







  



